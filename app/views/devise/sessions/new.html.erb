<div class="sign-in-form row">
  <div class="col info-container">
    <div class="sign-in-text">
      <%= image_tag('system-logo.png', class: 'system-logo-img') %>
      <hr align="left">
      <h4 class="font-weight-light">
        This is a private web application!
      </h4>
      <p class="fs-pt9">
        Access to this system is restricted to authorized users
        from Petron Bagumbayan Service Station only.
      </p>
    </div>
  </div>
  <div class="col form-container">
    <div class="sign-in-card card card-shadow-2">
      <div class="card-body">
        <h4 class="card-title font-weight-light mb-4">
          Sign-in to Petron Bagumbayan DSS
        </h4>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="form-row">
              <div class="col-3">
                <label class="col-form-label">Username</label>
              </div>
              <div class="col">
                <%= f.input_field :username, required: false, autofocus: true, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="form-group mb-3">
            <div class="form-row">
              <div class="col-3">
                <label class="col-form-label">Password</label>
              </div>
              <div class="col">
                <%= f.input_field :password, required: false, class: 'form-control' %>
              </div>
            </div>
          </div>

          <hr>

          <div class="form-group mt-4 mb-0">
            <div class="form-row">
              <div class="col-8 d-flex align-items-center">
                <p class="text-muted fs-pt8 mb-0">
                  Contact your administrator if you have problems signing in to the system.
                </p>
              </div>
              <div class="col-4 d-flex align-items-center justify-content-end">
                <%= f.button :submit, 'Sign in', class: 'btn btn-primary' %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>