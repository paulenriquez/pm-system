<%= simple_form_for @user, html: {class: 'form-partial'} do |user| %>
    <%= user.error_notification %>
    <div class="form-group">
        <label class="required">Username</label>
        <%= user.input_field :username, required: true, autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label class="required">Password</label>
        <%= user.input_field :password, required: true, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label class="required">Confirm Password</label>
        <%= user.input_field :password_confirmation, required: true, class: 'form-control' %>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" v-model="user.accountType">
        <label class="form-check-label">Administrator</label>
    
        <%= user.hidden_field :account_type, id: 'account_type', 'v-bind:value': 'convertedAccountType' %>
    </div>
    
    <hr>

    <div class="form-group">
        <label class="required">Name</label>
        <%= user.input_field :name, required: true, autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
        <label class="required">Position</label>
        <%= user.input_field :position, required: true, autofocus: true, class: 'form-control' %>
    </div>

    <%= user.submit 'Save', class: 'btn btn-primary' %>
<% end %>