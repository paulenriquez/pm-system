<div class="date-shift-calendar card">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-7 calendar-container pr-0">
                <div class="calendar-cells"></div>
                <div class="calendar-actions">
                    <a class="btn btn-sm btn-link" href="#">
                        Use date & shift form
                    </a>
                    <button type="button" id="button-calToday" class="btn btn-sm btn-light btn-light-darker mr-2
                        mdi mdi-calendar-today with-icon">
                        Today
                    </button>
                </div>
            </div>
            <div class="col shift-links-container pl-0">
                <div class="fade-container">
                    <h4 class="date-text font-weight-normal">

                    </h4>
                    <div class="date-description w-100 text-center"></div>
                    <ul class="list-group shift-links p-3">
                        <% (1..3).each do |shift| %>
                            <li href="#" class="list-group-item shift-link" id="list-shift<%= shift %>">
                                <div class="row">
                                    <div class="col-7">
                                        <h6 class="mb-0">Shift #
                                            <%= shift %>
                                        </h6>
                                        <div class="fs-pt875">
                                            <%= ShiftInventoryUpdate.hours_str(shift) %>
                                        </div>
                                    </div>
                                    <div class="col-5 shift-actions">
                                        <a href="" class="edit-link btn
                                                            btn-sm btn-light btn-light-darker mr-2
                                                            mdi mdi-pencil with-icon">
                                            Edit
                                        </a>
                                        <a href="" class="view-link btn
                                                            btn-sm btn-light btn-light-darker mr-2
                                                            mdi mdi-folder-open">
                                        </a>
                                    </div>
                                </div>
                            </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>