<%= simple_form_for @shift_inventory_update, html: {class: 'form-partial'} do |shift_inventory_update| %>
    
    <div class="form-group mb-4">
        <div class="row">
            <div class="col-4">
                <label>Date and Shift</label>
            </div>
            <div class="col">
                <label>Remarks</label>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <%= render 'date_shift_nav' %>
           </div>
            <div class="col">
                <textarea class="form-control h-100" v-model="shiftInventoryUpdate.remarks"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <small class="text-muted">Use the link buttons to navigate between dates and shifts.</small>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Inventory Updates</label>
        <div class="card tab-associations">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#deliveries">
                            Deliveries
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#fuel-sales">
                            Fuel Sales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#dipstick-measurements">
                            Dipstick Measurements
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#calibrations">
                            Calibrations
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#pump-meter-readings">
                            Pump Meter Readings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#pump-reconciliation-totals">
                            Pump Reconciliation Totals
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#non-fuel-sales">
                            Non-Fuel Sales
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body p-0">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="deliveries">
                        <%= render 'shift_inventory_updates/association_forms/deliveries_form', shift_inventory_update: shift_inventory_update %>
                    </div>
                    <div class="tab-pane fade" id="fuel-sales">
                        <%= render 'shift_inventory_updates/association_forms/fuel_sales_form', shift_inventory_update: shift_inventory_update %>
                    </div>
                    <div class="tab-pane fade" id="dipstick-measurements">
                        <%= render 'shift_inventory_updates/association_forms/dipstick_measurements_form', shift_inventory_update: shift_inventory_update %>
                    </div>
                    <div class="tab-pane fade" id="calibrations">
                        <%= render 'shift_inventory_updates/association_forms/calibrations_form', shift_inventory_update: shift_inventory_update %>
                    </div>
                    <div class="tab-pane fade" id="pump-meter-readings">
                        <%= render 'shift_inventory_updates/association_forms/pump_meter_readings_form', shift_inventory_update: shift_inventory_update %>
                    </div>
                    <div class="tab-pane fade" id="pump-reconciliation-totals">
                        <%= render 'shift_inventory_updates/association_forms/pump_reconciliation_totals_form', shift_inventory_update: shift_inventory_update %>
                    </div>
                    <div class="tab-pane fade" id="non-fuel-sales">
                        <h1>test</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%= shift_inventory_update.submit 'Save', class: 'btn btn-primary' %>

    <!-- HIDDEN FIELDS -->
    <%= shift_inventory_update.hidden_field :remarks, id: 'shift_inventory_update_remarks', 'v-bind:value': 'shiftInventoryUpdate.remarks' %>
<% end %>