<div class="calibrations-form">
    <div class="row">
        <div class="col-5">
            <table class="table table-bordered pump-nozzle-based-table" id="table-calibrations">
                <thead>
                    <th colspan="3">Pump Nozzle</th>
                    <th style="display:none;"></th>
                    <th style="display:none;"></th>
                    <th>Amount</th>
                </thead>
                <tbody>
                    <%=
                        shift_inventory_update.simple_fields_for :calibrations,
                            @shift_inventory_update.calibrations_by_pump_nozzle do |calibration|
                    %>
                        <%= render 'shift_inventory_updates/association_forms/calibration_fields', calibration: calibration %>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-4 pl-0">
            <div class="card">
                <div class="card-body p-3">
                    <h6 class="card-title">Input all at once</h6>
                    <div class="form-group">
                        <p class="fs-pt875">
                            Use the field below to input the same amount on all
                            pump nozzles.
                        </p>
                        <div class="form-row">
                            <div class="col-9">
                                <div class="input-group">
                                    <input class="form-control" id="input-amountAll" placeholder="Amount">
                                    <div class="input-group-append">
                                        <span class="input-group-text">L</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <button type="button" id="button-inputAmountAll" class="btn btn-secondary w-100">Go</button >
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-warning mt-2 mb-0 p-2 fs-pt8">
                        Take note that this will overwrite the value of each field.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>